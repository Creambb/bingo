/* pages/goods/goods.wxss */
@import "./styles/iconfont.wxss" ;

/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}

page, view, text, swiper, swiper-item, image, navigator{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page{
  /* 定义颜色 */
  --themeColor: #fc7946;
}

.container{
  width: 100%;
  height: 100%;
}
.nav {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  /* line-height: 100rpx; */
  background: #f7f7f7;
  font-size: 28rpx;
  white-space: nowrap;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
}

.nav-image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 16rpx auto 6rpx;
}

.nav-item {
  width: 25%;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: #fc7946;
}
.tab-box{
  background: greenyellow;
  padding-bottom: 100rpx;
  height: 100%;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
}